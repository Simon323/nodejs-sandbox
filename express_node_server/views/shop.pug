extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content 
  main 
    if prods.length > 0
      .grid 
        each product in prods
          article.card.product-item 
            header.card__header 
              h1.product__title #{product.title}
            .card__image  
              img(src="https://images.pexels.com/photos/1563356/pexels-photo-1563356.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", alt="Book1")
            .card__content 
              h2.product__price $10.99
              p.product__description This is description 
            .card__actions 
              button.btn Add to cart
    else 
      h1 No products